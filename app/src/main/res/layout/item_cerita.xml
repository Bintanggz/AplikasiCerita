<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ikon Cerita -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_book"
            android:contentDescription="Ikon Cerita"
            app:tint="@color/blue_700" />


        <!-- Konten Cerita -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judulCerita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Cerita"
                android:textColor="@color/blue_900"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deskripsiCerita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi singkat dan menarik dari cerita yang akan membuat pembaca penasaran..."
                android:textColor="@color/blue_700"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
